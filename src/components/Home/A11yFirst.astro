---
// import PhArrowRight from '~icons/ph/arrow-right';

const features = [
  {
    title: 'Aria Semantics',
    description:
      'Formwerk follows the <a href="https://www.w3.org/WAI/ARIA/apg/" target="_blank" rel="noopener">W3C ARIA Authoring Practices Guide</a>, ensuring proper aria attributes and keyboard interactions for all input types.',
  },
  {
    title: 'Adaptive Attributes',
    description:
      'You can use almost any HTML markup you prefer. The attributes and listeners will adapt based on the elements you use.',
  },
  // {
  //   title: '',
  //   description:
  //     'Audited by experts and assistive tech users to ensure the highest standards of accessibility. See <a href="/credits">contributors</a> for more details.',
  //   learnMore: '',
  // },
];
---

<section>
  <h2 class="heading-grad">
    Thoughtfully
    <span class="highlight">accessible</span>.
  </h2>

  <div class="mt-10 grid grid-cols-1 gap-4 md:grid-cols-2">
    {
      features.map((f) => (
        <div class="flex flex-col items-center rounded-lg border border-transparent bg-zinc-800/60 p-6 transition-colors duration-500 hover:border-amber-500/20 lg:items-start">
          <h3 class="heading-grad !text-2xl font-semibold">{f.title}</h3>
          <p
            class="mt-3 text-balance text-center text-zinc-400 lg:text-left"
            set:html={f.description}
          />

          {/* {f.learnMore && (
            <a href={f.learnMore} class="mt-6 inline-block text-sm">
              Learn more
              <PhArrowRight />
            </a>
          )} */}
        </div>
      ))
    }
  </div>
</section>

<style>
  section {
    background: radial-gradient(
      closest-corner,
      rgba(245, 158, 11, 0.09) 0%,
      rgba(24, 24, 27, 0.1) 70%
    );

    a {
      @apply text-amber-500 hover:text-amber-600;

      svg {
        @apply inline-block h-4 w-4;
      }
    }

    .highlight {
      @apply bg-gradient-to-b from-amber-400 to-amber-600 bg-clip-text text-transparent;
    }
  }
</style>
